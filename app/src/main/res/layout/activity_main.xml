<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:background="#EEE9E9"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="40sp"
                android:id="@+id/tv_xianshi"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:id="@+id/btn_kuohao1"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:id="@+id/btn_kuohao2"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="←"
                android:id="@+id/btn_tui"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:id="@+id/btn_c"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/btn_7"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_margin="1dp"
            />
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/btn_8"
                android:textSize="40sp"
                android:background="#ffffff"
            android:layout_margin="1dp"
            />
         <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/btn_9"
                android:textSize="40sp"
             android:background="#ffffff"
             android:layout_margin="1dp"
             />
         <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:id="@+id/btn_chu"
                android:textSize="40sp"
             android:background="#ffffff"
             android:layout_margin="1dp"
          />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/btn_4"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/btn_5"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/btn_6"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:id="@+id/btn_cheng"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/btn_1"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/btn_2"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/btn_3"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/btn_jian"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/btn_dian"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/btn_0"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:id="@+id/btn_deng"
                android:textSize="40sp"
                android:background="#FFA500"
                android:textColor="#ffffff"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/btn_jia"
                android:textSize="40sp"
                android:background="#ffffff"
                android:layout_margin="1dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </LinearLayout>

    </LinearLayout>

</LinearLayout>